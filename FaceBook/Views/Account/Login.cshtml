@using DataAccessLayer.ViewModel
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}


<div class="main-wrap">

    <div class="nav-header bg-transparent shadow-none border-0">
        <div class="nav-top w-100">
            <a href="index.html"><i class="feather-zap text-success display1-size me-2 ms-0"></i><span class="d-inline-block fredoka-font ls-3 fw-600 text-current font-xxl logo-text mb-0">MiniFacebook. </span> </a>
            <a href="#" class="mob-menu ms-auto me-2 chat-active-btn"><i class="feather-message-circle text-grey-900 font-sm btn-round-md bg-greylight"></i></a>
            <a href="default-video.html" class="mob-menu me-2"><i class="feather-video text-grey-900 font-sm btn-round-md bg-greylight"></i></a>
            <a href="#" class="me-2 menu-search-icon mob-menu"><i class="feather-search text-grey-900 font-sm btn-round-md bg-greylight"></i></a>
            <button class="nav-menu me-0 ms-2"></button>

            <a class="header-btn d-none d-lg-block bg-current fw-500 text-white font-xsss p-3 ms-auto w100 text-center lh-20 rounded-xl" asp-controller="Account" asp-action="Register">Register</a>
        </div>


    </div>

    <div class="row">
        <div class="col-xl-5 vh-100 d-none d-xl-block p-0  bg-image bg-no-repeat" style="background-image: url(https://uitheme.net/sociala/images/login-bg.jpg);"></div>
        <div class="col-xl-7 vh-100 align-items-center d-flex bg-white rounded-3 overflow-hidden">
            <div class="card mt-5 pt-3 shadow-none border-0 ms-auto me-auto login-card">
                <div class="card-body rounded-0 text-left">
                    <h2 class="fw-700 display1-size display2-md-size mb-4">Login into <br>your account</h2>
                    <form asp-action="Login">

                        <div class="form-group icon-input mb-3">
                            <i class="font-sm ti-email text-grey-500 pe-0"></i>
                            <input type="text" asp-for="userName" class="style2-input ps-2 form-control text-grey-900 font-xsss fw-600" placeholder="User Name">
                            <span asp-validation-for="userName" class="text-danger"></span>
                        </div>
                        <div class="form-group icon-input mb-3">
                            <input asp-for="password" type="Password" class="style2-input ps-2 form-control text-grey-900 font-xss ls-3" placeholder="Password">
                            <i class="font-sm ti-lock text-grey-500 pe-0"></i>
                            <span asp-validation-for="password" class="text-danger"></span>

                        </div>
                        <div class="form-check text-left mb-3">
                            <input type="checkbox" class="form-check-input mt-2" id="exampleCheck5">
                            <label class="form-check-label font-xsss text-grey-500" for="exampleCheck5">Remember me</label>
                            <a href="forgot.html" class="fw-600 font-xsss text-grey-700 mt-1 float-right">Forgot your Password?</a>
                        </div>
                        <div class="form-group mb-1"><input type="submit" value="Login" class="form-control text-center style2-input text-white fw-600 bg-dark border-0 p-0 " /></div>

                    </form>

                    <div class="col-sm-12 p-0 text-left">
                        <h6 class="text-grey-500 font-xsss fw-500 mt-0 mb-0 lh-32">Dont have an account
                            <a asp-controller="Account" asp-action="Register" class="fw-700 ms-1">Register</a>
                        </h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<script src="js/plugin.js"></script>
<script src="js/scripts.js"></script>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}