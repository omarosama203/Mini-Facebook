@using DataAccessLayer.ViewModel
@model AccountViewModel
@{
    Layout = "~/Views/Shared/_SearchPageLayout.cshtml";
}
<div class="card w-100 border-0 bg-white shadow-xs p-0 mb-4">
    <div class="card-body p-4 w-100 bg-current border-0 d-flex rounded-3">
        <a asp-controller="Account" asp-action="Setting" class="d-inline-block mt-2"><i class="ti-arrow-left font-sm text-white"></i></a>
        <h4 class="font-xs text-white fw-600 ms-4 mb-0 mt-2">Account Details</h4>
    </div>
    <div class="card-body p-lg-5 p-4 w-100 border-0 ">
        <div class="row justify-content-center">
            <div class="col-lg-4 text-center">
                <figure class="avatar ms-auto me-auto mb-0 mt-2 w100"><img src="~/files/images/@Model.ImagePath" alt="image" class="shadow-sm rounded-3 w-100"></figure>
                <h2 class="fw-700 font-sm text-grey-900 mt-3">@Model.FirstName @Model.LastName</h2>
                <h4 class="text-grey-500 fw-500 mb-3 font-xsss mb-4">@Model.UserName</h4>
            </div>
        </div>

        <form asp-action="EditUser" enctype="multipart/form-data">
            <div class="row">
                <div class="col-lg-6 mb-3">
                    <div class="form-group">
                        <label class="mont-font fw-600 font-xsss">First Name</label>
                        <input type="text" class="form-control" asp-for="FirstName" >
                    </div>
                </div>

                <div class="col-lg-6 mb-3">
                    <div class="form-group">
                        <label class="mont-font fw-600 font-xsss">Last Name</label>
                        <input type="text" class="form-control" asp-for="LastName">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6 mb-3">
                    <div class="form-group">
                        <label class="mont-font fw-600 font-xsss">Email</label>
                        <input type="text" class="form-control" asp-for="Email">
                    </div>
                </div>

                <div class="col-lg-6 mb-3">
                    <div class="form-group">
                        <label class="mont-font fw-600 font-xsss">Phone</label>
                        <input type="text" class="form-control" asp-for="PhoneNumber">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 mb-3">
                    <div class="form-group">
                        <label class="mont-font fw-600 font-xsss">Password</label>
                        <input type="password" class="form-control" asp-for="Password">
                    </div>
                </div>


                <div class="col-lg-12 mb-3">
                    <div class="card mt-3 border-0">
                        <div class="card-body d-flex justify-content-between align-items-end p-0">
                            <div class="form-group mb-0 w-100">
                                <input type="file" asp-for="Image"  id="file" class="input-file">
                                <label for="file" class="rounded-3 text-center bg-white btn-tertiary js-labelFile p-4 w-100 border-dashed">
                                    <i class="ti-cloud-down large-icon me-3 d-block"></i>
                                    <span class="js-fileName">Drag and drop or click to replace</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12">
                    <button type="submit" class="bg-current text-center text-white font-xsss fw-600 p-3 w175 rounded-3 d-inline-block border-0">Save</button>
                </div>
            </div>

        </form>
    </div>
</div>